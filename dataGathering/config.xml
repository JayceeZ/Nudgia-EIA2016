<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nudgia.dataGathering" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DataGathering</name>
    <description>
        Data gathering app for our project.
    </description>
    <author email="nudgia@gmail.com" href="http://nudgia.com">
        Team Nudgia
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-camerapicturebackground" spec="https://github.com/an-rahulpandey/cordova-plugin-camerapicturebackground.git" />
    <plugin name="cordova-plugin-geolocation" spec="~2.2.0" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~4.1.1" />
    <plugin name="cordova-plugin-device-motion" spec="~1.2.1" />
    <plugin name="cordova-plugin-background-mode" spec="~0.6.5" />
</widget>
