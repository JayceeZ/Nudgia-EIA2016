<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nudgia.nudgiaalpha" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>NudgiaAlpha</name>
    <description>
        Selfies all the time ? Now possible ! While driving or walking !
    </description>
    <author email="contact@nudgia.com" href="http://nudgia.com">
        Team Nudgia
    </author>
    <preference name="orientation" value="portrait" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <engine name="android" spec="~4.1.1" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-camerapicturebackground" spec="https://github.com/an-rahulpandey/cordova-plugin-camerapicturebackground.git" />
    <plugin name="cordova-plugin-file" spec="~4.2.0" />
    <plugin name="cordova-plugin-x-socialsharing" spec="~5.1.1" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="https://github.com/katzer/cordova-plugin-local-notifications" />
    <plugin name="cordova-plugin-background-mode" spec="~0.6.5" />
    <plugin name="cordova-plugin-geolocation" spec="~2.2.0" />
    <plugin name="cordova-plugin-device-motion" spec="~1.2.1" />
</widget>
